<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".PayrollApplication"
        android:allowBackup="false"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Payroll">
        <activity
            android:name=".ui.payroll.PayrollReportsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.payroll.GeneratePayrollActivity"
            android:exported="false" />
        <activity
            android:name=".ui.employee.EmployeeFormActivity"
            android:exported="false" />
        <activity
            android:name=".ui.employee.EmployeeListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>
